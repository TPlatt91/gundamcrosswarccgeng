####################### Card Field Definitions


####################### Background stuff

card field:
	type:				choice
	name:				card color
	choice:				BlueUnit
	choice:				RedUnit
	choice:				uncommon
	choice:				rare
	choice:				legendary
	description:			The frame of the card, used to indicate card rarity.

####################### Name line

card field:
	type:				text
	name:				name
	identifying:			true
	card list visible:		true
	card list column:		1
	description:			The name of the card

card field:
	type:				text
	name:				casting cost
	card list visible:		true
	card list column:		2
	description:			The casting cost of the card

####################### Image

card field:
	type:				image
	name:				image
	show statistics:		false
	description:			The image of the card

####################### Card type

card field:
	type:				image
	name:				type_or_class
	card list visible:		true
	card list column:		3
	description:			The type of class or item box

####################### Text box

card field:
	type:				text
	name:				primary_rule_name
	description:			Name of first ability
	
card field:
	type:				text
	name:				secondary_rule_name
	description:			Name of second ability

card field:
	type:				text
	name:				primary_rule_text
	show statistics:		false
	multi line:			true
	description:			The rules text for the card

card field:
	type:				text
	name:				secondary_rule_text
	show statistics:		false
	multi line:			true
	description:			The rules text of the card

card field:
	type:				text
	name:				flavor-text
	show statistics:		false
	multi line:			true
	description:			The flavor text for the card

####################### PT

card field:
	type:				text
	name:				power
	icon:				stats/power.png
	show statistics:		false
	description:			The power of a creature

card field:
	type:				text
	name:				toughness
	show statistics:		false
	icon:				stats/toughness.png
	description:			The toughness of a creature

card field:
	type:				text
	name:				pt
	save value:			false
	script: 
		combined_editor(
			field1: card.power,
			separator: " ",
			field2: card.toughness,
			soft_before_empty: true,
			hide_when_empty:   true
		)
	card list visible:		true
	card list column:		5
	card list width:		50
	card list name:			P/T
	description:			Power/toughness of a creature
	show statistics:		false

