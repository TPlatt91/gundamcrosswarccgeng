			field1: card.power,
			separator: " ",
			field2: card.toughness,
			soft_before_empty: true,
			hide_when_empty:   true
		)
	card list visible:		true
	card list column:		5
	card list width:		50
	card list name:			A/D
	description:			ATK/DEF of a creature
	show statistics:		false

