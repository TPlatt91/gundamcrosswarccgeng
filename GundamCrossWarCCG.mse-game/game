####################### Card Function Definitions

init script:
	defaultsize := {
			if input  == "Pilot" then "Pilot"
		else 	if input == "Armament" then "Armament" 
		else 	if input == "Crew" then "Crew" 
		else 	if input == "Warship" then "Warship" 
		else 	if input == "Counter" then "Counter" 
		else 	if input == "Event" then "Event" 
		else	"MediumUnit"
	}
	defaultcolor := {
		card.multicolor
			if input == "Pilot" then ""
		else	if input == "Armament" then ""
		else 	if input == "Crew" and card.multicolor != "" then ""
		else	"Blue"
	}
	defaultrarity := {
		card.type
			if input == "Warship" then "Warship"
		else	"Common"
	}
	cardcounter := {
	set.Set_Code + "-"
	}

####################### Set Field Definitions

set field:
	type: text
	name: Set Name
	identifying: true

set field:
	type: text
	name: Set Code
	identifying: true


####################### Card Field Definitions


####################### Name line

card field:
	type:				text
	name:				name
	identifying:			true
	card list visible:		true
	card list column:		1
	description:			The name of the card

card field:
	type:				text
	name:				casting cost
	card list visible:		true
	multi line:			true
	card list column:		5
	description:			The casting cost of the card

####################### Image

card field:
	type:				image
	name:				image
	show statistics:		false
	description:			The image of the card

####################### Card type

card field:
	type:			choice
	name:			color
	card list visible:		true
	card list column:		3
	choice:
		name:	Blue
		enabled: {card.multicolor==""}
	choice:	
		name:	Green
		enabled: {card.multicolor==""}
	choice:	
		name:	Yellow
		enabled: {card.multicolor==""}
	choice:	
		name:	Black
		enabled: {card.multicolor==""}
	choice:	
		name:	Red
		enabled: {card.multicolor==""}
	choice:	
		name:
		enabled: {card.multicolor==""}
	default:		defaultcolor(card.type)
	description:		The color of the card.
	script: 	if card.multicolor != "" then "" else value

card field:
	type:		choice
	name:		multicolor
	card list visible:	false
	choice:
	choice:		BlueGreen
	choice:		BlueYellow
	choice:		BlueBlack
	choice:		BlueRed
	choice:		GreenYellow
	choice:		GreenBlack
	choice:		GreenRed
	choice:		YellowBlack
	choice:		YellowRed
	choice:		BlackRed
	description:		Multicolor Crew
	script: 	if card.type == "Crew" then value else ""

card field:
	type:			choice
	name:			type
	choice:			
		name:	Unit
		enabled: {card.multicolor==""}
	choice:	
		name:	Event
		enabled: {card.multicolor==""}
	choice:	
		name:	Counter
		enabled: {card.multicolor==""}
	choice:	
		name:	Crew
		enabled: {card.multicolor==""}
	choice:	
		name:	Warship
		enabled: {card.multicolor==""}
	choice:	
		name:	Pilot
		enabled: {card.multicolor==""}
	choice:	
		name:	Armament
		enabled: {card.multicolor==""}
	description:		The type and layout of the card.
	card list visible:	true
	card list column:	4
	script: 	if card.multicolor == "" then value else "Crew"

card field:
	type:		text
	name:		characteristic
	editable:	true
	card list column:	6


card field:
	type:		choice
	name:		rarity
	choice:		Common
		enabled: {card.type!="Warship"}
	choice:		Rare
		enabled: {card.type!="Warship"}
	choice:		DoubleRare
		enabled: {card.type!="Warship"}
	choice:		CrossRare
		enabled: {card.type!="Warship"}
	choice:		SpecialRare
		enabled: {card.type!="Warship"}
	choice:		CollectionCommon
	choice:		CollectionCrossRare
	choice:		CollectionSpecialRare
	choice:		Promo
	choice:	
		name:	Warship
		enabled: {card.type=="Warship"}
	default:	defaultrarity(card.type)
	description:	The rarity of the card.

