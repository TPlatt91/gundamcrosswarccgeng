	type:			choice
	name:			type
	choice:			Unit
	choice:			Event
	choice:			Counter
	choice:			Crew
	choice:			Warship
	choice:			Pilot
	choice:			Armament
	description:		The type and layout of the card.
	card list visible:	true
	card list column:	4

card field:
	type:		text
	name:		characteristic
	editable:	true
	card list column:	6


card field:
	type:		choice
	name:		rarity
	choice:		Common
	choice:		Rare
	choice:		DoubleRare
	choice:		CrossRare
	choice:		SpecialRare
	choice:		Promo
